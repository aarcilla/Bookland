@using Bookland.Helpers
@{ 
    ViewBag.Title = "Bookland: " + ViewBag.Title;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @{ Html.RenderAction("MergeSessionAndDbCartsWhenAuthenticated", "Cart"); }
</head>
<body>
    <div id="wrapper">
        <nav class="horizontal account">
            @{ Html.RenderAction("CartLink", "Cart"); }
            @{ Html.RenderAction("UserLinks", "Account"); }
        </nav>

        <header>
            @Html.ImageActionLink(imageLocation: "/Content/Images/bookland-logo.gif", 
                imageHeight: 60, classes: new[] { "logo" }, 
                action: "Index", controller: "Home")
        </header>

        <nav class="horizontal menu">
            <a href="#">Deals</a>
            <a href="#">Latest</a>
            <a href="#">Search</a>
            <a href="#">Help</a>
            <a href="#">About Us</a>
        </nav>

        <nav class="vertical">
            @{ Html.RenderAction("Menu", "Category"); }
        </nav>

        <div id="main">
            @RenderBody()
        </div>
    </div>
</body>
</html>
