@model Bookland.Models.LocalPasswordModel

@{
    ViewBag.Title = "Change Password";
}

<h2>Change Password</h2>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    @Html.HiddenFor(m => m.OldPassword)
    
    <div class="form-row">
        @Html.LabelFor(m => m.UserName)
        @Html.DisplayFor(m => m.UserName)
        @Html.HiddenFor(m => m.UserName)
    </div>
    
    <div class="form-row">
        @Html.LabelFor(m => m.NewPassword)
        @Html.PasswordFor(m => m.NewPassword, new { @class = "text-box single-line" })
        @Html.ValidationMessageFor(m => m.NewPassword)
    </div>
    
    <div class="form-row">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-box single-line" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>
    
    <input type="submit" value="Change" />
}